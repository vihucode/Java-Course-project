                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
      <ImageView fitHeight="58.0" fitWidth="151.0" layoutX="146.0" layoutY="41.0" opacity="0.8" pickOnBounds="true" preserveRatio="true" style="-fx-image: url(&quot;sisulogo.png&quot;);" />
      <ImageView fitHeight="50.0" fitWidth="51.0" layoutX="307.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true" style="-fx-image: url(&quot;sisusq.png&quot;);" />
