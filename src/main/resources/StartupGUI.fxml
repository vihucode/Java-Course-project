   <children>
      <VBox alignment="TOP_CENTER" layoutY="115.0" prefHeight="200.0" prefWidth="504.0">
         <children>
            <Label fx:id="resultLabel" alignment="CENTER" contentDisplay="BOTTOM" maxHeight="-Infinity" prefHeight="50.0" prefWidth="286.0" text="- Start by logging in or registering a new user.">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font name="Arial Italic" size="12.0" />
               </font>
            </Label>
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="280.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.0" minWidth="10.0" prefWidth="115.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.0" minWidth="10.0" prefWidth="165.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Student number:">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="stuNumField" GridPane.columnIndex="1" />
               </children>
            </GridPane>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#openMainWindow" prefHeight="23.0" prefWidth="63.0" text="Login">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Button>
            <Button fx:id="registButton" mnemonicParsing="false" onAction="#openRegister" style="-fx-background-color: transparent; -fx-text-fill: #111111;" text="Register a new user" underline="true">
